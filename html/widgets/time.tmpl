<!-- time -->
<tr>
    <td class="<?% (param.count mod 2) == 0 ? 'light' : 'dark' %?>" >
        <?% data.msg %?>
    </td>
    <td class="<?% (param.count mod 2) == 0 ? 'light' : 'dark' %?>" >
        <?% val = cgi.param(data.NAME) || data.def %?>
        <?% IF data.readonly %?>
        <span<?% FOREACH p = param.tags; "$p ";END %?>>
        <?% val %?>
        </span>
        <?% ELSE %?>
        <input type="text" name="<?% data.NAME %?>" value="<?% val %?>" <?% FOREACH p = param.tags; "$p ";END %?>>
        <?% END %?>
    </td>
</tr>
