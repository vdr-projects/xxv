<!-- radio -->
<tr>
    <td class="<?% (param.count mod 2) == 0 ? 'light' : 'dark' %?>" >
        <?% data.msg %?>
    </td>
    <td class="<?% (param.count mod 2) == 0 ? 'light' : 'dark' %?>" >
        <?% val = cgi.param(data.NAME) || data.def %?>
        <?% FOREACH wert = data.choices %?>
            <input type="radio" name="<?% data.NAME %?>" value="<?% wert %?>" <?% "checked" IF val == wert %?><?% FOREACH p = param.tags; " $p";END %?>><?% wert %?><br>
        <?% END %?>
    </td>
</tr>
