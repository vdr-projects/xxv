<?% BLOCK printduration;
      duration = stopp - start;
      IF duration > 1;
        hours = duration div 3600;
        minutes = duration div 60 mod 60;
        seconds =  duration mod 60;
        gettext("Duration") ; " : "; hours div 1 ;":"; minutes | format('%02d');
      END;
END %?>
