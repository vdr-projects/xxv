  <a target="_blank" href="?cmd=search&amp;__contentid=<?% c %?>">
    <?% ct %?>
  </a>
<?% END %?>
                    </p>
    <?% END %?>
    <?% IF level && allow('topten') %?>
                    <p class="description">
                    <a target="_blank" href="?cmd=topten">
                    <div class="levelbar">
                      <div style="width:<?% level*20 %?>%"></div>
                    </div>
