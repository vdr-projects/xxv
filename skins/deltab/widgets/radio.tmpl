<!-- radio -->
<tr>
    <td valign="top">
        <?% data.msg %?>
    </td>
    <td>
        <?% val = cgi.param(data.NAME) || data.def %?>
        <?% FOREACH wert = data.choices %?>
            <input type="radio" name="<?% data.NAME %?>" value="<?% wert %?>" <?% 'checked="checked"' IF val.grep("^${wert}").size %?> /><?% wert %?>&nbsp;
        <?% END %?>
    </td>
</tr>
